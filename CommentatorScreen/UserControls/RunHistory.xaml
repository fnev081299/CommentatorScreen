                    <!-- Column for Lane -->
                    <DataGridTextColumn
                    Header="Lane"
                    Width="*"
                    Binding="{Binding Lane, Converter={local:LaneValueConverter}}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for Reaction -->
                    <DataGridTextColumn
                    Header="Reaction"
                    Width="*"
                    Binding="{Binding Reaction}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for ET -->
                    <DataGridTextColumn
                    Header="ET"
                    Width="*"
                    Binding="{Binding ET}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for Index -->
                    <DataGridTextColumn
                    Header="Index"
                    Width="*"
                    Binding="{Binding Index}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for MPH -->
                    <DataGridTextColumn
                    Header="MPH"
                    Width="*"
                    Binding="{Binding MPH}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for Result-->
                    <DataGridTextColumn
                    Header="Result"
                    Width="*"
                    Binding="{Binding Result, Converter={local:TrimmingValueConverter}}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Stack panel container -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <!-- Title -->
            <TextBlock  FontWeight="Bold"  FontSize="24" Foreground="Gray">
                <Run Text="Right Lane -" />
                <Run Text="#" /><Run Text="{Binding NextRightLaneDriver.Racenum, Converter={local:TrimmingValueConverter}}" />
                <Run Text="{Binding NextRightLaneDriver.Driver, Converter={local:TrimmingValueConverter}}" />
            </TextBlock>

            <!-- Datagrid -->
            <DataGrid Grid.Row="1" ItemsSource="{Binding NextRightLaneHistory}"
                    CanUserAddRows="False"
                    AutoGenerateColumns="False"
                    HeadersVisibility="All"
                    HorizontalAlignment="Stretch"
                    IsReadOnly="True">
                <DataGrid.Columns>

                    <!-- Column for Lane -->
                    <DataGridTextColumn
                    Header="Lane"
                    Width="*"
                    Binding="{Binding Lane, Converter={local:LaneValueConverter}}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for Reaction -->
                    <DataGridTextColumn
                    Header="Reaction"
                    Width="*"
                    Binding="{Binding Reaction}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for ET -->
                    <DataGridTextColumn
                    Header="ET"
                    Width="*"
                    Binding="{Binding ET}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for Index -->
                    <DataGridTextColumn
                    Header="Index"
                    Width="*"
                    Binding="{Binding Index}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for MPH -->
                    <DataGridTextColumn
                    Header="MPH"
                    Width="*"
                    Binding="{Binding MPH}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />

                    <!-- Column for Result-->
                    <DataGridTextColumn
                    Header="Result"
                    Width="*"
                    Binding="{Binding Result, Converter={local:TrimmingValueConverter}}"
                    ElementStyle="{StaticResource MaterialDesignDataGridTextColumnStyle}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>